 schemes
    {
        type            schemeSwitcher;
        libs           ("libschemeSwitcher.so");
        
        schemeSwitch
        {
            "5.0"  // Switches from Euler to backward ddt scheme at t = 5.0
            {
                ddtSchemes
                {
                    "Euler"    "backward";
                }
            }
            
            
        }
    }

